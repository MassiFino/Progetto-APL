<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interfaccia_C_.ProfilePage"
             xmlns:vm="clr-namespace:Interfaccia_C_.ViewModel"
               BackgroundColor="White"
   Padding="0">

    <ScrollView>
        <StackLayout Padding="20">

            <!-- Testata Profilo -->
            <Border Padding="15" BackgroundColor="#f0f0f0" >
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Image Source="profile_placeholder.png" WidthRequest="80" HeightRequest="80" />
                    <StackLayout VerticalOptions="CenterAndExpand">
                        <Label Text="Nome Utente" FontAttributes="Bold" FontSize="18" />
                        <Label Text="email@example.com" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </StackLayout>
            </Border>

            <!-- Prenotazioni Dinamiche -->
            <CollectionView ItemsSource="{Binding Bookings}" Margin="0,20,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15" BackgroundColor="#f5f5f5" >
                            <StackLayout>
                                <Label Text="{Binding HotelName}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding StayPeriod}" FontSize="14" />
                                <Label Text="{Binding Price, StringFormat='â‚¬ {0:F2}'}" FontSize="16" TextColor="Green" />
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>