<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Interfaccia_C_.ViewModel"
             x:Class="Interfaccia_C_.AddRoomPage"
             x:DataType="vm:AddRoomPageViewModel"
             Title="Add Room"
             BackgroundColor="White"
             Padding="0">

    <ScrollView>
        <VerticalStackLayout Margin="10" Spacing="15">

            <!-- Benvenuto -->
            <Label 
                Text="Welcome to the Add Room Page!" 
                FontSize="18" 
                FontAttributes="Italic" 
                Margin="0,10,0,5" 
                TextColor="Yellow" />

            <!-- Sezione principale per l'aggiunta stanza -->
            <StackLayout>
                <Label Text="Aggiungi una stanza per questo hotel"
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" 
                       TextColor="Black"/>

                <Label Text="{Binding Name}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" 
                       TextColor="Black"/>

                <!-- Location dell'hotel -->
                <Label Text="{Binding Location}" 
                       FontSize="16"
                       HorizontalOptions="Start" 
                       TextColor="Black"/>
            </StackLayout>

            <!-- Sezione per aggiungere la stanza -->
            <StackLayout Spacing="10">
                <Label Text="Nome della Stanza" FontSize="16" TextColor="Black"/>
                <Entry x:Name="RoomNameEntry" Placeholder="Inserisci il nome della stanza" 
                       TextColor="Black"
                       Text="{Binding RoomName}" HeightRequest="45"/>

                <Label Text="Descrizione della Stanza" FontSize="16" TextColor="Black"/>
                <Editor x:Name="RoomDescriptionEditor" Placeholder="Descrizione della stanza"  
                        TextColor="Black"
                        Text="{Binding RoomDescription}" HeightRequest="100"/>

                <Label Text="Prezzo per notte (€)" FontSize="16" TextColor="Black"/>
                <Entry x:Name="PricePerNightEntry" Placeholder="Es. 100.00" 
                       TextColor="Black"
                       Text="{Binding PricePerNight}" Keyboard="Numeric" HeightRequest="45"/>

                <Label Text="Numero massimo di ospiti" FontSize="16" TextColor="Black"/>
                <Entry x:Name="MaxGuestsEntry" Placeholder="Es. 2" 
                       TextColor="Black"
                       Text="{Binding MaxGuests}" Keyboard="Numeric" HeightRequest="45"/>

                <Label Text="Tipologia di stanza" FontSize="16" TextColor="Black"/>
                <Picker x:Name="RoomTypePicker" 
                        HeightRequest="40"
                        TextColor="Black"
                        BackgroundColor="Blue"
                        SelectedIndex="0"
                        SelectedItem="{Binding RoomType}">
                    <Picker.Items>
                        <x:String>Singola</x:String>
                        <x:String>Doppia</x:String>
                        <x:String>Tripla</x:String>
                        <x:String>Quadrupla</x:String>
                        <x:String>Suite</x:String>
                        <x:String>Deluxe</x:String>
                        <x:String>Accessible Room</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>

            <!-- Caricamento immagine stanza -->
            <Button Text="Carica Immagine" 
                    Command="{Binding UploadRoomImageCommand}" 
                    BackgroundColor="MediumPurple" 
                    TextColor="White"/>

            <!-- Visualizza le immagini della stanza caricate -->
            <StackLayout IsVisible="{Binding IsRoomImageUploaded}">
                <Label Text="{Binding RoomImageNames}" FontSize="14" TextColor="DarkGreen"/>
            </StackLayout>

            <!-- Bottone per aggiungere stanza -->
            <Button Text="Aggiungi Stanza" 
                    Command="{Binding AddRoomCommand}"
                    BackgroundColor="#28A745" 
                    TextColor="White" 
                    CornerRadius="20" 
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
