<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interfaccia_C_.ProfileHostPage"
             xmlns:vm="clr-namespace:Interfaccia_C_.ViewModel"
             BackgroundColor="AliceBlue"
             Padding="0">

    <VerticalStackLayout Margin="10" Spacing="15">
       
        <Border Stroke="#20B2AA" StrokeThickness="1" BackgroundColor="#00CED1" Padding="20"
               HorizontalOptions="Center" VerticalOptions="Center"
               StrokeShape="RoundRectangle 20">
            <Grid Margin="10" ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                <!-- Immagine del profilo nella colonna di sinistra -->
                <Border Stroke="LightGray" StrokeThickness="1" Padding="5" Grid.RowSpan="5" HorizontalOptions="Center" VerticalOptions="Center" StrokeShape="RoundRectangle 10">
                    <Image Source="{Binding ProfileImage}" WidthRequest="80" HeightRequest="80" VerticalOptions="CenterAndExpand"/>
                </Border>

                <!-- Prima riga con Nome utente e Email -->
                <StackLayout Grid.Column="1" Grid.Row="0" Spacing="10" VerticalOptions="Start" Padding="5">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Nome Utente:" FontAttributes="Bold" FontSize="16" TextColor="#FF6347" VerticalOptions="Center" Margin="10" />
                        <!-- Colore acceso per Nome Utente -->
                        <Label Text="{Binding UserName}" FontSize="18" TextColor="Black" VerticalOptions="Center" Margin="10" />
                        <!-- Testo neutro per il valore -->

                        <Label Text="Email:" FontAttributes="Bold" FontSize="16" TextColor="#FF6347" VerticalOptions="Center" Margin="10" />
                        <!-- Colore acceso per Email -->
                        <Label Text="{Binding Email}" FontSize="14" TextColor="Gray" VerticalOptions="Center" Margin="10" />
                        <!-- Testo neutro per il valore -->

                        <Label Text="Ruolo:" FontAttributes="Bold" FontSize="16" TextColor="#FF6347" VerticalOptions="Center" Margin="10" />
                        <!-- Colore acceso per Ruolo -->
                        <Label Text="{Binding Role}" FontSize="14" TextColor="Gray" VerticalOptions="Center" Margin="10" />
                        <!-- Testo neutro per il valore -->
                    </HorizontalStackLayout>
                </StackLayout>

                <!-- Seconda riga con Punti Fedeltà, Prenotazioni Totali e Ruolo -->
                <StackLayout Grid.Column="1" Grid.Row="1" Spacing="10" VerticalOptions="Start" Padding="5">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Punti Fedeltà:" FontAttributes="Bold" FontSize="16" TextColor="#32CD32" VerticalOptions="Center" Margin="10"/>
                        <!-- Colore acceso per Punti Fedeltà -->
                        <Label Text="{Binding PuntiFedelta, StringFormat='{0} punti'}" FontSize="14" TextColor="Black" VerticalOptions="Center" Margin="10" />
                        <!-- Testo neutro per il valore -->

                        <Label Text="Prenotazioni Totali:" FontAttributes="Bold" FontSize="16" TextColor="#32CD32" VerticalOptions="Center" Margin="10" />
                        <!-- Colore acceso per Prenotazioni Totali -->
                        <Label Text="{Binding TotPren, StringFormat='{0} Prenotazioni attive'}" FontSize="14" TextColor="Black" VerticalOptions="Center" Margin="10" />
                        <!-- Testo neutro per il valore -->
                    </HorizontalStackLayout>
                </StackLayout>
            </Grid>
        </Border>

        <ScrollView>
            <VerticalStackLayout Margin="10" Spacing="20">
              
                    <!-- Dettagli dell'utente locatore -->
                <Label Text="Profilo Locatore" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
                 <HorizontalStackLayout Spacing="10">
                <!-- Messaggio in caso di nessun hotel -->
                <Label Text="{Binding Message}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#32CD32"
                   HorizontalOptions="Center" 
                   IsVisible="{Binding Message, Converter={StaticResource StringToVisibilityConverter}}" />
                <!-- Bottone per la registrazione -->
                <Button Text="Aggiungi un hotel"
                     Command="{Binding AddHotelCommand}"
                     BackgroundColor="#28A745"
                     TextColor="White"
                     CornerRadius="20"
                     HeightRequest="40"
                     WidthRequest="150" />
                </HorizontalStackLayout>
                <!-- Lista degli hotel posseduti -->
                <CollectionView ItemsSource="{Binding OwnedHotels}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="0,10" BackgroundColor="LightYellow" Stroke="#FFA500" StrokeShape="RoundRectangle 10">
                                <HorizontalStackLayout Spacing="20">
                                    <Border Stroke="LightGray" StrokeThickness="1" Padding="5" Grid.RowSpan="5" HorizontalOptions="Center" VerticalOptions="Center" StrokeShape="RoundRectangle 20">
                                        <Image Source="{Binding ImageHotel}" WidthRequest="80" HeightRequest="80" VerticalOptions="CenterAndExpand"/>
                                    </Border>


                                    <!-- Contenuto a destra (nome, posizione, descrizione, servizi) -->
                                    <StackLayout VerticalOptions="CenterAndExpand" Spacing="10" HorizontalOptions="FillAndExpand">

                                        <!-- Nome dell'Hotel -->
                                        <Label Text="{Binding name}" FontSize="20" FontAttributes="Bold" TextColor="Black"/>

                                        <!-- Posizione dell'Hotel -->
                                        <Label Text="{Binding location}" FontSize="14" TextColor="#FFD700"/>

                                        <!-- Descrizione dell'Hotel -->
                                        <Label Text="{Binding description}" FontSize="12" TextColor="#4682B4"/>

                                        <!-- Servizi -->
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="Servizi:" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                            <Label Text="{Binding services, StringFormat='{0}'}" FontSize="12" TextColor="#D2691E"/>
                                        </StackLayout>
                                        <!-- Servizi -->
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="Voto:" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                            <Label Text="{Binding rating}" FontSize="12" TextColor="#D2691E"/>
                                        </StackLayout>
                                        <Button Text="Visualizza"
                                        BackgroundColor="#FF1493"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Command="{Binding ViewHotelCommand}"
                                        CommandParameter="{Binding .}" />



                                    </StackLayout>
                                </HorizontalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
