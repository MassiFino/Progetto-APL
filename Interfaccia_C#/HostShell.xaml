<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Interfaccia_C_.HostShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Interfaccia_C_"
    Shell.FlyoutBehavior="Flyout"
    Title="InterfacciaHost_C_"
    Shell.NavBarIsVisible="False"
    
>
    <Shell.FlyoutBackground>
        <LinearGradientBrush>
            <GradientStop Color="#00B5B8" Offset="0.0" />
            <GradientStop Color="#D80072" Offset="1.0" />

        </LinearGradientBrush>
    </Shell.FlyoutBackground>


   
    <ShellContent
        Title="Profilo"
        ContentTemplate="{DataTemplate local:ProfileHostPage}"
       Route="ProfilePage">
        <ShellContent.Icon>
            <FileImageSource File="account2.png" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
      Title="Aggiungi un nuovo Hotel"
      ContentTemplate="{DataTemplate local:AddHotelPage}"
      Route="AddHotelPage" >
        <ShellContent.Icon>
            <FileImageSource File="hotel.png" />
        </ShellContent.Icon>
    </ShellContent>
    <ShellContent
        
        
   Title="Add Room "
   ContentTemplate="{DataTemplate local:AddRoomPage}"
   Route="AddRoomPage" 
    IsVisible="False">
    <ShellContent.Icon>
        <FileImageSource File="room.png" />
    </ShellContent.Icon>
    </ShellContent>
    
    


</Shell>
