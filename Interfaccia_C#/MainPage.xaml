<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Interfaccia_C_.ViewModel"
    xmlns:model="clr-namespace:Interfaccia_C_.Model"
    x:Class="Interfaccia_C_.MainPage"
    x:DataType="vm:MainPageViewModel"
    Title="Hotel Offers"
    BackgroundColor="White"
    Padding="0">

    <!-- Se l'intera pagina deve scorrere, avvolgila in uno ScrollView -->
    <ScrollView>
        <VerticalStackLayout Margin="10" Spacing="15">

            <Border Stroke="LightGray" StrokeThickness="1" BackgroundColor="DarkBlue"
        Padding="20" HorizontalOptions="Center" VerticalOptions="Center"
        StrokeShape="RoundRectangle 20">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <!-- Slogan con effetto stilizzato -->
                        <Label Text="🏨 Trova l'hotel perfetto per il tuo viaggio! 🌍"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"
                           BackgroundColor="DarkBlue"
                           Padding="15"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"/>
                        <Button Text="Cerca" 
                     WidthRequest="100" 
                     HeightRequest="40"
                     Command="{Binding GoToSearchCommand}" />

                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Sezione Offerte Imperdibili -->
            <Label Text="Offerte imperdibili hotel in corso" FontSize="20" FontAttributes="Bold" Margin="0,10,0,5" TextColor="Black"/>
            <CollectionView ItemsSource="{Binding OfferteImperdibili}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <!-- Imposto il tipo corretto per il binding -->
                    <DataTemplate x:DataType="model:Hotel">
                        <Border Stroke="LightYellow" StrokeThickness="1" Padding="20" Margin="5" BackgroundColor="YellowGreen" WidthRequest="250" HeightRequest="350" StrokeShape="RoundRectangle 20">

                            <VerticalStackLayout>
                                <!-- Assicurati che il valore di Immagine sia corretto, es. "hotel2.png" -->
                                <Image Source="{Binding ImageSource}" HeightRequest="150" Aspect="AspectFill" />
                                <Label Text="{Binding Name}" FontAttributes="Bold" Margin="0,5,0,0" TextColor="LightYellow"  />
                                <!-- Usa PrezzoMinimo per il prezzo -->
                                <Label Text="{Binding Prezzo}" TextColor="LightYellow" />
                                <Button Text="Guarda l'offerta"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=GuardaOffertaCommand}"
                                CommandParameter="{Binding .}" 
                                Margin="0,10,0,0" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Sezione Mete più gettonate -->
            <Label Text="Mete più gettonate" FontSize="20" FontAttributes="Bold" Margin="0,10,0,5" TextColor="Black"/>
            <CollectionView ItemsSource="{Binding MeteGettonate}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Hotel">
                        <Border Stroke="LightGoldenrodYellow" StrokeThickness="1" Padding="10" Margin="5" BackgroundColor="GreenYellow" WidthRequest="180" HeightRequest="250" StrokeShape="RoundRectangle 20">
                            <VerticalStackLayout>
                                <Image Source="{Binding ImageSource}" HeightRequest="120" Aspect="AspectFill" />
                                <Label Text="{Binding Name}" FontAttributes="Bold" Margin="0,5,0,0"  TextColor="Green" />
                                <Label Text="{Binding NumeroHotel}"  TextColor="Green"/>
                                <Label Text="{Binding Prezzo}" TextColor="Green" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
