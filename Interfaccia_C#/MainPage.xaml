<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Interfaccia_C_.ViewModel"
    xmlns:model="clr-namespace:Interfaccia_C_.Model"
    x:Class="Interfaccia_C_.MainPage"
    x:DataType="vm:MainPageViewModel"
    x:Name="PageRoot"
    Title="🏨 Hotel Offers 🏨"
    BackgroundColor="#f4f4f4"
    Padding="0">

    <ScrollView>
        <VerticalStackLayout Margin="10" Spacing="20">

            <!-- Intestazione con sfondo accattivante -->
            <Frame BackgroundColor="#003366" CornerRadius="20" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🏨 Trova l'hotel perfetto per il tuo viaggio! 🌍"
                           FontSize="24" FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White" />
                    <Button Text="🔍 Cerca Offerte" 
                            WidthRequest="150" HeightRequest="45"
                            BackgroundColor="#FFD700"
                            TextColor="Black"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            Command="{Binding GoToSearchCommand}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Separator Line -->
            <BoxView HeightRequest="2" BackgroundColor="#cccccc" />

            <!-- Sezione Offerte Imperdibili -->
            <Label Text="🔥 Offerte Imperdibili 🔥" FontSize="22" FontAttributes="Bold" TextColor="#d32f2f" />
            <CollectionView ItemsSource="{Binding OfferteImperdibili}" HeightRequest="400">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Hotel">
                        <Frame BackgroundColor="#ffcc80" CornerRadius="15" Padding="15" HasShadow="True" WidthRequest="250">
                            <VerticalStackLayout>
                                <Image Source="{Binding ImageSource}" HeightRequest="250" Aspect="AspectFill"  />
                                <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="#b71c1c" FontSize="18" />
                                <Label Text="{Binding Prezzo}" TextColor="#b71c1c" FontSize="16" />
                                <Button Text="Scopri Offerta" BackgroundColor="#e53935" TextColor="White" FontAttributes="Bold" CornerRadius="8"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=GuardaOffertaCommand}"
                                        CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Separator Line -->
            <BoxView HeightRequest="2" BackgroundColor="#cccccc" />
            <Label Text="🌍 Mete più Gettonate 🌍" 
       FontSize="22" 
       FontAttributes="Bold" 
       TextColor="#00796b" 
       HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding MeteGettonate}" 
                HeightRequest="400" 
                Margin="10">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" 
                         HorizontalItemSpacing="10" 
                         VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Hotel">
                        <Frame BackgroundColor="#80cbc4" 
                            CornerRadius="15" 
                            Padding="10" 
                            HasShadow="True" 
                            WidthRequest="200"
                            HeightRequest="300">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=GuardaOffertaCommand}"
                        CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*">
                                <!-- RIGA 0: Immagine -->
                                <Image Source="{Binding ImageSource}" 
                                    HeightRequest="200" 
                                    Aspect="AspectFit"/>
                                <!-- RIGA 1: Nome dell'hotel -->
                                <Label Grid.Row="1" Text="{Binding Name}" 
                           FontAttributes="Bold" 
                           FontSize="18" 
                           TextColor="#004d40" 
                           HorizontalTextAlignment="Center"
                           LineBreakMode="TailTruncation"/>
                                <!-- RIGA 2: Numero hotel -->
                                <Label Grid.Row="2" 
                           Text="{Binding NumeroHotel, StringFormat='Numero hotel: {0}'}" 
                           FontSize="16" 
                           TextColor="#004d40" 
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                                <!-- RIGA 3: Prezzo -->
                                <Label Grid.Row="3" 
                           Text="{Binding Prezzo, StringFormat='Prezzo: {0:C}'}" 
                           FontSize="16" 
                           TextColor="#004d40" 
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>