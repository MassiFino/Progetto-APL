<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Interfaccia_C_.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Interfaccia_C_"
    Shell.FlyoutBehavior="Flyout"
    Title="Interfaccia_C_"
    Shell.NavBarIsVisible="False"> <!-- Nascondi la barra superiore -->

    <!-- Pagina di Login come pagina iniziale -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        IsVisible="True" />
    
    <!-- Pagina Home (MainPage), che sarÃ  visibile dopo il login -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <!-- Pagina di Registrazione -->
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />
    <!-- Pagina Profilo -->
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />

</Shell>
