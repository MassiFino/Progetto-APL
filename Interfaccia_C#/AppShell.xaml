    xmlns:local="clr-namespace:Interfaccia_C_"
    Shell.FlyoutBehavior="Flyout"
    Title="Interfaccia_C_"
    Shell.NavBarIsVisible="False"> <!-- Nascondi la barra superiore -->


    <!-- Pagina Home (MainPage), che sarÃ  visibile dopo il login -->
    <ShellContent
