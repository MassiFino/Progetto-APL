<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Interfaccia_C_.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Interfaccia_C_"
    Shell.FlyoutBehavior="Flyout"
    Title="Interfaccia_C_">

   
    <!-- Pagina di Login come pagina iniziale -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        IsVisible="True" />
    <!-- Imposta la LoginPage come visibile all'avvio -->

    <!-- Pagina Home (MainPage), che sarÃ  visibile dopo il login -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <!-- Imposta la MainPage inizialmente invisibile -->

    <!-- Pagina di Registrazione -->
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

</Shell>
